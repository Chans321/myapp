  <style>
 body{
  background: #FFFFE6;
}
  #team{
   background : #FFFFF0;
}

  #team p{
   margin : 0;
   text-align : center;
}

  </style>
  <script>
	function submitDetails(){
	var request = new XMLHttpRequest();
	var m1 = document.getElementById('member1').value;
	var m2 = document.getElementById('member2').value;
	var m3 = document.getElementById('member3').value;
	var m4 = document.getElementById('member4').value;
	var projectTitle = document.getElementById('projectTitle').value;
	var description = document.getElementById('description').value;
	var params = "member1="+m1+"&member2="+m2+"&member3="+m3+"&member4="+m4+"&projectTitle="+projectTitle+"&description="+description;;
	alert(params);
	alert(request);
	
	 request.onreadystatechange = function() {
	     if (this.readyState == 4 && this.status == 200) {

	        alert(this.readyState);
	        alert(request.responseText);
	      }
	 };
	 var protocol = window.location.protocol
	 var host = window.location.host;
	 var url = protocol+"//"+host+"/teacher/addMajorTeam";
	 alert(url);
	 request.open("POST", url, true);
	 request.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
	 request.send(params)
	 
	 }
  
  </script>
</head>

<body>

<%- include('teacherHeader') %>

<%- include('teacherNav') %>
<div class="container" style="margin-top:1%">
	<div class="row">
  		<div class="col-sm">
   			<div class="multisteps-form__panel shadow p-4  rounded" style="background:#F8F8FF;">
            	<h3 class="multisteps-form__title">Add a New Team </h3>
                <div class="multisteps-form__content">
                	<div class="form-row mt-4">
                    	<div class="col-12 col-sm">
                      		<div class="form-group row"> 
                      			<label for="projectTitle" class="col-sm-3 col-form-label">Project Title</label> 
                      			<div class="col-sm"> 
                      				<input type="text" class="form-control" id="projectTitle" placeholder="enter team name"> 
                      			</div> 
                      		</div>
                    	</div>
                	</div>
                 	<div class="form-row mt-4">
                 		<% for(let i = 0 ; i < 2;i++){ %>
	                    	<div class="col-12 col-sm">
	                      		<label for="member<%= i+1 %>">Member <%= i+1 %></label> 
	                      		<select id="member<%= i+1 %>" class="form-control"> 
	                      			<option value="">Choose...</option> 
	                      			<% for(var j=0; j<students.length;j++){ %>
	                      				<option value="<%= students[j].roll %>"><%= students[j].studentName+" ("+students[j].roll+")" %></option>
	                      			<% } %>
	                      		</select>
	                    	</div>
                    	<% } %>
                  	</div>
                 	<div class="form-row mt-4">
                 		<% for(let i = 0 ; i < 2;i++){ %>
	                    	<div class="col-12 col-sm">
	                      		<label for="member<%= i+3 %>">Member <%= i+3 %></label> 
	                      		<select id="member<%= i+3 %>" class="form-control"> 
	                      			<option value="">Choose...</option>
	                      			<% for(var j=0; j<students.length;j++){ %>
	                      				<option value="<%= students[j].roll %>"><%= students[j].studentName+" ("+students[j].roll+")" %></option>
	                      			<% } %>
	                      		</select>
	                    	</div>
                    	<% } %>
                  	</div>
                  	<div class="form-row mt-4">
                    	<div class="col-12 col-sm-">
                        	<div class="form-group row"> 
                        		<label for="desc" class="col-sm-3 col-form-label">Project description</label> 
                        		<div class="col-sm"> 
                        			<textarea class="form-control" id="description" rows="2"></textarea> 
                        		</div> 
                        	</div>
                    	</div>
                  	</div>
                  	<div class="button-row" style="text-align : right;">
						<button class="btn btn-cancel" type="button" title="Cancel">Cancel</button>
                    	<button class="btn btn-success" type="button" onclick="submitDetails()">Save</button>
                  	</div>
               	</div>
      		</div>
  		</div>
	</div>
</div>
</body>
</html>
