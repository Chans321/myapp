<body>
<%- include('teacherHeader') %>

<%- include('teacherNav') %>
    
<div class="container-fluid">
<%- include("switch") %>

<div class="col-sm">
    <h1 style="text-align: center;">Major Project Teams</h1>
    <div class="table-responsive">
    <table class="table table-sm">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Member1</th>
          <th scope="col">Mid Evaluation</th>
          <th scope="col">End Evaluation</th>
          <th scope="col">Delete Team</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i <  validTeams.length; i++) { %>
        <tr>
          <td><%= validTeams[i].projectTitle %></td>
          <td>
          	<% for(let j=0; j < validTeams[i].students.length; j++){ %>
          		<span><%= validTeams[i].studentsList[j].studentName+" ("+ validTeams[i].students[j]+")" %></span><br>
          	<% } %>
          </td>
          <td><button class="btn btn-success"  id="<%= validTeams[i].teamId %>" onclick="midEval(this.id)">Mid Eval</button></td>
          <td><button  id="<%= validTeams[i].teamId %>"  class="btn btn-success" onclick="endEval(this.id)">End Eval</button></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    </div>
    <button class="btn btn-success"  onclick="addTeam()">Add Team</button>
</div>
  

</body>
