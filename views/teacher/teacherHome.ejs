	<script>
       function addTeam(){
	       var url = "./addTeam";
	       window.location = url;
      }
      function midEval(team){
      	var url = "./guideMidsem/"+team;
      	window.location = url;
      }
      function endEval(team){
       	var url = "./guideEndsem/"+team;
       	window.location = url;
      }

   </script>
  
